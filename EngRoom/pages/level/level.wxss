page {
    background-color: #fff;
}

.banner-scroll {
    margin-top: -2px;
}

.banner-scroll repeat {
    margin-bottom: 10px;
}

.title {
    position: absolute;
    bottom: 0;
    left: 0;
    color: #fff;
    font-size: 12px;
    background-color: rgba(0, 0, 0, 0.6);
    padding: 5px;
    width: 100%;
}

.Bannerswiper {
    height: 175px;
}

.pic {
    position: absolute;
    top: -30px;
    left: 0;
    width: 100%;
    height: 100%;
}

.slide-image {
    width: 100%;
}
.chapter {
    padding: 30rpx;
    overflow-y: scroll;
    height: 800rpx
}
 .chapter button{
   height: 100rpx;
   line-height: 100rpx
} 
.course {
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding-left: 14px;
    padding-right: 14px;
    box-sizing: border-box;
    font-size: 18px;
    text-align: left;
    text-decoration: none;
    color: #fff;
    line-height: 100rpx;
    border-radius: 5px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow: hidden;
    color: #04be02;
    border: 1px solid #04be02;
    margin-top: 40rpx;
    height: 100rpx;
}
.levelball{
    width: 60rpx;
    height: 60rpx;
    margin-top: 20rpx;
    border-radius: 30rpx;
    background-color: red;
    position: absolute;
}