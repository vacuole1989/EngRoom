<view class="index">
    <view class="banner-scroll">
        <swiper indicator-dots="true" autoplay="true" class="Bannerswiper">
            <block wx:for="{{carousels}}" wx:key="seqId">
                <swiper-item>
                    <view class="swiper-item">
                        <navigator>
                            <view class="pic">
                                <image src="{{item.picUrl}}" mode="aspectFit" class="slide-image" />
                            </view>
                            <view class="title">
                                <text>{{item.carouselPicName}}</text>
                            </view>
                        </navigator>
                    </view>
                </swiper-item>
            </block>
        </swiper>
    </view>

    <view class="chapter">
        <block wx:for="{{courses}}" wx:key="seqId">
            <navigator url='/pages/level/level?seqId={{item.seqId}}' style='border-color:{{item.bgColor}};color:{{item.textColor}};' class="course">{{item.chapterTitle}} {{item.chapterDesc}}</navigator>
        </block>
    </view>
</view>